<div class="container">

  <div class="m-3 d-flex justify-content-center align-items-center p-3">
    <h1>Bookmark#<%= @list.name %></h1>
    <h1 class="ms-5"><%= link_to "Bookmark a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %></h1>
  </div>


  <div class="container row justify-content-around gap-2">
    <% @bookmarks.each do |bookmark| %>
      <div class="card col-3">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
